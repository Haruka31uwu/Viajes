<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Viajes.Views.Main.MainPages.Home"
             Visual="Material">
    <ContentPage.Content>
        <ListView RowHeight="300" SeparatorVisibility="None" BackgroundColor="Red" x:Name="lServices" ItemTapped="lServices_ItemTapped" HasUnevenRows="True" SelectionMode="None" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Frame Margin="10" BackgroundColor="Transparent" HeightRequest="220" >
                                <StackLayout >
                                    <Image Source="{Binding ImageName}" HorizontalOptions="FillAndExpand" WidthRequest="300" HeightRequest="150" VerticalOptions="Start"/>
                                   
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding NameOfService}"/>
                                        
                                    </StackLayout>  
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
   
</ContentPage>