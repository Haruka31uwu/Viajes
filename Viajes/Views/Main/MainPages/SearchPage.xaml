<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="Viajes.Views.Main.MainPages.SearchPage"
             Visual="Material">

    <ScrollView BackgroundColor="White">
        <Frame>
                <ListView x:Name="ls" HasUnevenRows="True" ItemTapped="ls_ItemTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame BorderColor="Black">
                                    <StackLayout Orientation="Horizontal">
                                        <Image Source="{Binding ImageName}" WidthRequest="80" Margin="10"/>
                                        <StackLayout Orientation="Vertical">
                                            <Label Text="{Binding NameOfService}" TextColor="Black"/>
                                            <Label Text="{Binding Destination}"/>
                                            <Label Text="{Binding Data}"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
         </Frame>

     
    </ScrollView>
</ContentPage>